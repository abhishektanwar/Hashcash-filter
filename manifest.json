{
	"name": "OAuth Tutorial FriendBlock",
	"version": "1.0",
	"description": "Uses OAuth to connect to Google's People API and display contacts photos.",
	"manifest_version": 2,
	"browser_action": {
		"default_title": "FriendBlock, friends face's in a block."
	},
	"content_scripts": [
		{
			"matches": [
				"https://mail.google.com/*",
				"https://inbox.google.com/*"
			],
			"js": ["inboxsdk.js","content.js"],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com; object-src 'self'",
	"oauth2": {
		"client_id": "224793704861-cgkod90mhgocv54usea0dc3fcq3h59mp.apps.googleusercontent.com",
		"scopes":["https://www.googleapis.com/auth/contacts.readonly","https://www.googleapis.com/auth/gmail.readonly",
			"https://www.googleapis.com/auth/gmail.modify", "https://www.googleapis.com/auth/gmail.labels"]
	},
	"permissions": [
		"identity",
		"tabs",
		"https://hashcash3api.herokuapp.com/",
		"https://www.googleapis.com/",
		"https://accounts.google.com/",
		"https://www.googleapis.com/",
		"https://mail.google.com/",
		"https://inbox.google.com/",
		"https://apis.google.com/"
	]
}